@model List<GroupViewModel>

@{ int counter = 0; }

@foreach(var Group in Model) {
    <section>
        @Group.GroupName <a asp-controller="Groups" asp-action="Edit" asp-route-id=@counter>Edit</a>
        <form asp-controller="Groups" asp-action="Delete" asp-route-id=@counter method="post"><button>Delete</button></form>
        @{counter++;}
    </section>
}
<a asp-controller="Groups" asp-action="Create">Create</a>