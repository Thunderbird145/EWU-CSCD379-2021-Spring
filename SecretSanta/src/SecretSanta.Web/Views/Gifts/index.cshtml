@model List<GiftViewModel>

@{int counter = 0;}

@foreach(var GiftViewModel in Model) {
    <section>
        @GiftViewModel.Title - @GiftViewModel.Description <a asp-controller="Gifts" asp-action="Edit" asp-route-id=@counter>Edit</a><form asp-action="Delete" asp-route-id=@counter method="post"><button>X</button></form>
        @{counter++;}
    </section>
}
