@{
    ViewBag.Title = "Users - Create";
}

@model UserViewModel

<form asp-controller="Users" asp-action="Create" method="post">
    @await Html.PartialAsync("_CreateOrEdit")
    <button class="bg-green-500 hover:bg-green-200 text-white font-bold py-2 px-4 rounded">Save</button>
    <a asp-controller="Users" asp-action="Index"><button class="bg-green-500 hover:bg-green-200 text-white font-bold py-2 px-4 rounded">Cancel</button></a>
</form>